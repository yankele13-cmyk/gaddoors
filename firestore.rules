rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products: Public Read, Specific Admin Email Write
    match /products/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'yankele13@gmail.com';
    }

    // Messages: Public Create, Specific Admin Email Read/Write
    match /messages/{document=**} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'yankele13@gmail.com';
    }

    // Installations: Public Read, Admin Write
    match /installations/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'yankele13@gmail.com';
    }

    // Appointments: Admin Only (Read/Write)
    match /appointments/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'yankele13@gmail.com';
    }

    // Block default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
