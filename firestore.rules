rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- SECURITY HELPERS ---

    // Basic Auth Check
    function isAuthenticated() {
      return request.auth != null;
    }

    // STRICT ADMIN CHECK (RBAC)
    // Reads the user's profile from the 'users' collection to verify 'role' is 'admin'
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'yankele13@gmail.com' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // --- COLLECTIONS ---

    // Products: Public Read, Admin Write Only
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Installations: Public Read, Admin Write Only
    match /installations/{installationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Leads (CRM): Admin Read/Write Only
    match /leads/{leadId} {
      allow read, write: if isAdmin();
    }
    
    // Messages (Contact Form): Public Create, Admin Read/Update
    match /messages/{messageId} {
      allow create: if true; // Public can send messages
      allow read, update, delete: if isAdmin();
    }

    // Appointments (Calendar): Admin Only
    match /appointments/{apptId} {
      allow read, write: if isAdmin();
    }

    // Quotes: Admin Only
    match /quotes/{quoteId} {
      allow read, write: if isAdmin();
    }

    // Orders: Admin Only
    match /orders/{orderId} {
      allow read, write: if isAdmin();
    }

    // Invoices: Admin Only
    match /invoices/{invoiceId} {
      allow read, write: if isAdmin();
    }
    
    // Installers (Ops): Admin Only
    match /installers/{installerId} {
      allow read, write: if isAdmin();
    }

    // Settings: Public Read (for app config), Admin Write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users Collection: Users can read/write ONLY their own profile
    // This allows the frontend to sync the profile (fetching the role)
    // SECURITY: Prevent users from modifying their own 'role' field
    match /users/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId && 
         (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])));
      
      // Allow creation only if they don't try to set a role (or if they do, the Trigger will overwrite it anyway, 
      // but blocking it here is cleaner). 
      // Actually, for creation, simpler to allow it and let Trigger fix it, 
      // OR block creation if role is present. 
      // Let's rely on the Update rule above for existing users.
      // For create:
      // allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
